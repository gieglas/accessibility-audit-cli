{
  "name": "@consevangelou/accessibility-audit-cli",
  "version": "2.1.0",
  "description": "CLI tool to run bulk accessibility audits (WCAG / EN 301 549) and do aggregated analysis",
  "license": "MIT",
  "type": "module",
  "bin": {
    "accessibility-audit": "./cli/accessibility-audit.mjs"
  },
  "files": [
    "cli/",
    "analysis/",
    "excel_analysis/",
    "package.json",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "keywords": [
    "accessibility",
    "a11y",
    "wcag",
    "en301549",
    "axe-core",
    "audit"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gieglas/accessibility-audit-cli.git"
  },
  "homepage": "https://github.com/gieglas/accessibility-audit-cli",
  "author": "Constantinos Evangelou",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "test": "node --test",
    "accessibility-audit": "node cli/run-audit.mjs",
    "aggregated-analysis": "node cli/run-aggregated-analysis.mjs",
    "init-excel-analysis": "node cli/init-excel-analysis.mjs",
    "copy-latest-csv-for-excel": "node cli/copy-latest-csv-for-excel.mjs",
    "coverage": "c8 --reporter=html --reporter=text --reporter=lcov --reporter=json-summary npm test",
    "coverage:copy": "node -e \"try{require('fs').copyFileSync('coverage/coverage-summary.json','./coverage-summary.json')}catch(e){process.exit(0)}\"",
    "coverage:report": "c8 report",
    "coverage:badge": "coverage-badges --output ./coverage-badges.svg && npm run coverage:copy"
  },
  "dependencies": {
    "@consevangelou/accessibility-audit-core": "^1.0.5",
    "axe-core": "^4.11.0",
    "pa11y": "^9.0.1",
    "puppeteer": "^24.33.0"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "coverage-badges-cli": "^2.2.0"
  }
}
